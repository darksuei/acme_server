      <% if (hasSchedule == true) { %>
      <main class="schedule-main">
        <!-- <h1>Your Schedule</h1> -->
        <p class="goals-note">
          *Note: Goals are listed in order of priority according to the EDF algorithm..
        </p>
        <div id="calendar" class="calender"></div>
        <div id="goalsList">
          <% goals.forEach(function(item) { %>
          <div class="goal-item">
            <div class="goal-header">
              <div class="goal-header-text">
                <h3><%= item.title %></h3>
                <p class="priority"><%= item.priority.toUpperCase() %> PRIORITY</p>
                <p class="text7">Deadline: <%= item.deadline.toUpperCase() %></p>
              </div>

              <div class="icons">
                <!-- <p id="editGoal">Edit</p> -->
                <button class="delete-btn" onclick="deleteGoal('<%= item._id %>')">
                  <svg xmlns="http://www.w3.org/2000/svg" height="24" width="24" viewBox="0 0 48 48">
